{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@classes": ["classes/index"],
      "@services/*": ["services/*"],
      "@interfaces": ["interfaces/index"],
      "@config": ["config"],
      "@middlewares/*": ["middlewares/*"],
      "@routes": ["routes"]
    },
    "outDir": "build",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
